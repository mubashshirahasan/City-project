<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground2">

    <TextView
        android:id="@+id/title_Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="@color/colorWhite"
        android:textSize="27sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_Register"
        android:layout_marginBottom="50dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layoutBasic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/colorWhite">

                <EditText
                    android:id="@+id/reg_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_icon_user"
                    android:drawablePadding="5dp"
                    android:fontFamily="serif"
                    android:gravity="center|left"
                    android:hint="Name"
                    android:padding="5dp"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/colorWhite">

                <EditText
                    android:id="@+id/reg_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_icon_email"
                    android:fontFamily="serif"
                    android:gravity="center|left"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:textColor="@android:color/black"
                    />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/colorWhite">

                <EditText
                    android:id="@+id/reg_Contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_icon_phone"
                    android:fontFamily="serif"
                    android:gravity="center|left"
                    android:hint="Contact"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:maxLength="10"
                    />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/colorWhite">

                <EditText
                    android:id="@+id/reg_Age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_icon_age"
                    android:fontFamily="serif"
                    android:gravity="center|left"
                    android:hint="Age"
                    android:padding="5dp"
                    android:drawablePadding="5dp"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/colorWhite">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center|left"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:text="Gender"
                        android:textSize="17sp"
                        android:drawableLeft="@drawable/ic_icon_gender"/>

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdo_maleReg"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Male"
                            android:textColor="@color/colorAccent"
                            android:textSize="19sp" />

                        <RadioButton
                            android:id="@+id/rdo_femaleReg"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:text="Female"
                            android:textColor="@color/colorAccent"
                            android:textSize="19sp" />

                    </RadioGroup>

                </TableRow>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/colorWhite">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center|left"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:text="Vegetarian"
                        android:textSize="17sp"
                        android:drawableLeft="@drawable/ic_icon_veeg"/>

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdo_VegReg"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Yes"
                            android:textColor="@color/colorAccent"
                            android:textSize="19sp" />

                        <RadioButton
                            android:id="@+id/rdo_n_VegReg"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:text="No"
                            android:textColor="@color/colorAccent"
                            android:textSize="19sp" />

                    </RadioGroup>

                </TableRow>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/colorWhite">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center|left"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:text="Drinker"
                        android:drawableLeft="@drawable/ic_icon_drink"
                        android:textSize="17sp"
                         />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdo_drinkerReg"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Yes"
                            android:textColor="@color/colorAccent"
                            android:textSize="19sp" />

                        <RadioButton
                            android:id="@+id/rdo_n_drinkerReg"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:text="No"
                            android:textColor="@color/colorAccent"
                            android:textSize="19sp" />

                    </RadioGroup>

                </TableRow>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/colorWhite">

                <EditText
                    android:id="@+id/reg_Address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_icon_address"
                    android:fontFamily="serif"
                    android:gravity="center|left"
                    android:hint="Address"
                    android:padding="5dp"
                    android:drawablePadding="5dp"
                    android:inputType="textPostalAddress"
                    android:textColor="@android:color/black"
                    />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/colorWhite">

                <EditText
                    android:id="@+id/reg_Password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_icon_pass"
                    android:fontFamily="serif"
                    android:gravity="center|left"
                    android:hint="Password"
                    android:padding="5dp"
                    android:drawablePadding="5dp"
                    android:inputType="textPassword"
                    android:textColor="@android:color/black"
                    />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Cuisine You Like"
                        android:textColor="@color/colorAccent"
                        android:textSize="19sp"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/black" />

                    <GridView
                        android:id="@+id/grid_cuisine"
                        android:layout_width="match_parent"
                        android:layout_height="122dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center|left"
                        android:numColumns="auto_fit"
                        android:scrollbars="none" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Places You Like"
                        android:textColor="@color/colorAccent"
                        android:textSize="19sp"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/black" />

                    <GridView
                        android:id="@+id/grid_places"
                        android:layout_width="match_parent"
                        android:layout_height="122dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center|left"
                        android:numColumns="auto_fit"
                        android:scrollbars="none" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/reg_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Register"
        android:background="@drawable/ic_back_login"
        android:textColor="@color/colorWhite"
        android:textSize="21sp"
        />

</RelativeLayout>