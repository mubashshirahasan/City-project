<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TableRow
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lin_start"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/ic_edit_back">

            <TextView
                android:textSize="12dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Start Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/starttime"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="9:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_end"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/ic_edit_back">

            <TextView
                android:textSize="12dp"
                android:fontFamily="@font/roboto_medium"
                android:text="End Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/endtime"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="18:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </TableRow>


    <TextView
        android:textColor="@color/colorBackground1"
        android:layout_marginTop="20dp"
        android:id="@+id/hours"
        android:fontFamily="@font/roboto_medium"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:text="Total Hours : 10"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/colorBackground1"
        app:cardCornerRadius="25dp">

        <TextView
            android:id="@+id/btn_Ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_action_right"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:text="Proceed"
            android:textColor="@color/colorWhite"
            android:textSize="19sp" />

    </android.support.v7.widget.CardView>

</LinearLayout>