<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewSelection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground1"
                android:gravity="center"
                android:text="Choose Item"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                android:padding="6dp"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground1"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/grid_Selection"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <include
                        android:id="@+id/lView1"
                        layout="@layout/item_selection"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                    <include
                        android:id="@+id/lView2"
                        layout="@layout/item_selection"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                    <include
                        android:id="@+id/lView3"
                        layout="@layout/item_selection"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                    <include
                        android:id="@+id/lView4"
                        layout="@layout/item_selection"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                    <include
                        android:id="@+id/lView5"
                        layout="@layout/item_selection"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                    <include
                        android:id="@+id/lView6"
                        layout="@layout/item_selection"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                    <include
                        android:id="@+id/lView7"
                        layout="@layout/item_selection"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                    <include
                        android:id="@+id/lView8"
                        layout="@layout/item_selection"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                    <include
                        android:id="@+id/lView9"
                        layout="@layout/item_selection"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />
                </LinearLayout>

            </HorizontalScrollView>

            <ListView
                android:id="@+id/sDialogList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:scrollbars="none"
                android:padding="5dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="1dp"
                />

            <include
                layout="@layout/footer_layout"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/sDialogSubmit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:text="Submit"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/sDialogCancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:text="Cancel"
                    android:textColor="@color/colorAccent"
                    />
            </TableRow>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>